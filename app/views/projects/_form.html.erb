  </div>

  <div>
    <%= form.label :description, class: "form-label", style: "display: block" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="text-center" style="margin-top: 10px">
    <%= form.submit class: "btn btn-primary"%>
  </div>
<% end %>
